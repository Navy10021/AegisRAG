# AegisRAG Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================================
# OpenAI API Configuration
# ============================================================

# Your OpenAI API key
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Optional: OpenAI organization ID
# OPENAI_ORG_ID=org-your-org-id

# ============================================================
# Model Configuration
# ============================================================

# Default model for LLM analysis
# Options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# DEFAULT_MODEL=gpt-4o-mini

# ============================================================
# Logging Configuration
# ============================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
# LOG_FILE=logs/aegis.log

# Maximum log file size in MB
# MAX_LOG_SIZE_MB=10

# Number of backup log files to keep
# BACKUP_COUNT=5

# ============================================================
# Analysis Configuration
# ============================================================

# Maximum input text length (characters)
# MAX_INPUT_LENGTH=10000

# Cache size for search results
# CACHE_SIZE=256

# Maximum history size for analysis
# MAX_HISTORY_SIZE=1000

# ============================================================
# Security Configuration
# ============================================================

# Enable input sanitization
# ENABLE_INPUT_SANITIZATION=true

# Maximum prompt length for LLM (characters)
# MAX_PROMPT_LENGTH=1000

# ============================================================
# Feature Flags
# ============================================================

# Enable Self-RAG meta-evaluation
# ENABLE_SELF_RAG=true

# Enable BM25 keyword search
# ENABLE_BM25=true

# Enable semantic embeddings
# USE_EMBEDDINGS=true

# Enable LLM analysis (requires OpenAI API key)
# USE_LLM=true

# Enable advanced features (XAI, Memory, Relationships)
# ENABLE_ADVANCED=true

# ============================================================
# Performance Tuning
# ============================================================

# LLM request timeout (seconds)
# LLM_TIMEOUT=30

# Regex timeout (seconds)
# REGEX_TIMEOUT=0.1

# Number of top results to return
# TOP_K_RESULTS=5

# ============================================================
# Development Settings
# ============================================================

# Enable debug mode
# DEBUG=false

# Enable verbose logging
# VERBOSE=false

# ============================================================
# Notes
# ============================================================

# - All commented settings use default values
# - Uncomment and modify as needed
# - Keep .env file secure and never commit it
# - See CONTRIBUTING.md for more configuration details
